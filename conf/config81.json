{
  "api": {
    "serverName": "Traffic Splitter",
    "port": 81,
    "maxConnections": 1024,
    "upstreamKeepAlive": {
      "maxSockets": 1024,
      "maxFreeSockets": 64,
      "timeout": 60000,
      "keepAliveTimeout": 30000
    },
    "emitMetricsInterval": {
      "http": 10000,
      "https": 10000
    }
  },
  "bunyan": {
    "name": "traffic-splitter",
    "streams": []
  },
  "browserId": {
    "cookie": "bid",
    "maxAge": 315360000,
    "length": 12
  },
  "domains": [
    "qa.tvg.com",
    "us.betfair.com",
    "betfair.local",
    "dev.betfair",
    "dev.betfair:443",
    "dev.betfair:8443",
    "localhost.betfair.com:8443",
    "localhost",
    "bjgbiflinjbdggehcddcbncdddomop"
  ],
  "CORS": {
    "headers": [
        "ORIGIN",
        "X_REQUESTED_WITH",
        "X-Requested-with",
        "Content-Type",
        "Accept"
    ],
    "credentials": "true",
    "methods": [
        "GET",
        "POST",
        "DELETE",
        "OPTIONS",
        "PUT"
    ],
    "max-age": "600"
  },
  "circuitBreaker": {
    "enabled": true,
    "dryrun": false,
    "interval": 5000,
    "numIntervalPeriods": 6,
    "responseTimeThreshold": {
      "min": 5000,
      "max": 10000
    },
    "errorCode": "503",
    "errorMessage": "Server is temporarily at capacity"
  },
  "pathRegExp": {
    "prefix": "^",
    "sufix": "([/?].*)?$"
  },
  "rulesets": {},
  "upstreams": [
    {
      "name": "wiki",
      "enabled": true,
      "criteria": {},
      "upstream": {
        "type": "serveSecure",
        "options": {
          "host": "www.wikipedia.org",
          "port": 443,
          "headers": {
            "host": "www.wikipedia.org"
          }
        }
      }
    }
  ]
}
